<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="FFFFFF"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!--untuk judul atasnya "Wisataku"-->

    <!-- Ikon dan Tombol Wisata Kuliner -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/satisfy"
        android:text="Wisataku"
        android:textColor="#A52A2A"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <!-- Ikon dan Tombol Wisata Alam -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <ImageView
        android:id="@+id/imgAlam"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Ikon Wisata Alam"
        android:src="@drawable/alam_icon"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="399dp" />

    <ImageView
        android:id="@+id/imgKuliner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Ikon Wisata Kuliner"
        android:src="@drawable/resto_icon"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="300dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvWisataAlam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3A7945"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="Wisata Alam"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="421dp" />

    <TextView
        android:id="@+id/tvWisataKuliner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8B1A1A"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="Wisata Kuliner"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="312dp" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>